# Server Configuration
NODE_ENV=development
PORT=5000

# Database
DB_USER=elw
DB_HOST=localhost
DB_NAME=thulobazaar
DB_PASSWORD=postgres
DB_PORT=5432

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# URLs
# FRONTEND_URL - Frontend site URL
# Development: http://localhost:3333
# Production:  https://thulobazaar.com.np
FRONTEND_URL=http://localhost:3333

# BACKEND_URL - This API's public URL
# Development: http://localhost:5000
# Production:  https://api.thulobazaar.com.np
BACKEND_URL=http://localhost:5000

# CORS Origins (comma-separated for multiple)
# Development: http://localhost:3333,http://localhost:3000
# Production:  https://thulobazaar.com.np
CORS_ORIGIN=http://localhost:3333

# Email (SMTP)
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=ThuLoBazaar <noreply@thulobazaar.com.np>

# File Uploads
UPLOAD_DIR=./uploads
