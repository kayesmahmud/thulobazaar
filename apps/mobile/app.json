{
  "expo": {
    "name": "ThuluBazaar",
    "slug": "thulobazaar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "thulobazaar",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thulobazaar.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to the camera to take photos for your ads.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload images for your ads.",
        "NSLocationWhenInUseUsageDescription": "This app needs your location to show nearby ads."
      }
    },
    "android": {
      "package": "com.thulobazaar.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ThuluBazaar to access your photos.",
          "cameraPermission": "Allow ThuluBazaar to access your camera."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow ThuluBazaar to use your location."
        }
      ]
    ]
  }
}
